<div class="modal fade" id="modalDettaglioRazza" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel"><b> @ViewBag.Name - Dettagli Razza</b></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="col shadow p-3 mb-5 rounded d-flex justify-content-center">
                    <p><b>Temperamento: </b>@Html.Raw(@ViewBag.Temperament)</p>
                    <img src="@ViewBag.Img" class="d-flex align-content-center" style="width:300px; height:auto;" />
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
            </div>
        </div>
    </div>
</div>